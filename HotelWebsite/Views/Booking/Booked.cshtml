@model HotelWebsite.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Booked";
}

<div class="booked">
    <div class="redirect-message">
        <p>You will be automatically redirected to home page after </p>
        <p id="countdown">5</p>
    </div>

    <div class="booked-info">
        <div class="booked-title-mes">
            <p class="gratitude">Thanks!</p>
            <p>You have booked a room</p>
        </div>
    </div>
</div>

<script>
    var countdown = 5;

    var x = setInterval(function() {
        countdown--;

        document.getElementById("countdown").innerHTML = countdown;

        if (countdown < 1) {
            window.location.href = "https://localhost:7172"
        }

    }, 1000);
    
</script>
